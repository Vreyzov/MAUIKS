<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="HabitTrackerApp.Views.HabitDetailPage"
             Title="HabitDetailPage">
    <StackLayout Padding="20">
        <Label Text="{Binding Title}" FontSize="24" FontAttributes="Bold" />
        <Label Text="Частота: " />
        <Label Text="{Binding Frequency}" />

        <Button Text="Отметить как выполненную" Clicked="OnMarkDoneClicked" />
    </StackLayout>
</ContentPage>